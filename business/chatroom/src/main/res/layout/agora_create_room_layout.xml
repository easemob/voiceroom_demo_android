<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_layout"
    android:background="@drawable/bg_app_def_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <io.agora.secnceui.widget.titlebar.ChatroomTitleBar
        android:id="@+id/title_bar"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:titleBarTitle="Agora Chat Room"
        app:titleBarTitleTextColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:titleBarDisplayHomeAsUpEnabled="true"
        />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/agora_tab_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:tabIndicatorHeight="0dp"
        app:tabMode="scrollable"
        android:paddingStart="15dp"
        android:background="@color/transparent"
        app:tabRippleColor="@color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_bar"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_fragment"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:clipChildren="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/agora_tab_layout"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ed_area"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vp_fragment"
        android:layout_marginTop="20dp"
        android:layout_width="315dp"
        android:layout_height="78dp">

        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="#3C4267"
            android:layout_marginLeft="10dp"
            android:hint="Random Name"
            android:textColorHint="#3C4267"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/random"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="#3C4267"
            android:layout_marginRight="10dp"
            android:hint="Random"
            android:textColorHint="#3C4267"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/random"
            android:src="@drawable/icons_refresh"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_width="14dp"
            android:layout_height="14dp"/>

        <EditText
            android:id="@+id/ed_room_name"
            android:background="@drawable/room_create_input_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="20dp"
            android:maxLines="1"
            android:paddingEnd="8dp"
            android:hint="Set Room Name"
            android:maxLength="32"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_18sp"
            android:textColor="#3C4267"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/encryption"
        app:layout_constraintTop_toBottomOf="@+id/ed_area"
        app:layout_constraintLeft_toLeftOf="@+id/ed_area"
        android:textSize="@dimen/text_size_14sp"
        android:textColor="@color/black"
        android:text="@string/room_create_encrypt"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/group_layout"
        app:layout_constraintTop_toBottomOf="@+id/encryption"
        app:layout_constraintLeft_toLeftOf="@+id/ed_area"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_width="202dp"
        android:layout_height="20dp">

        <RadioGroup
            android:id="@+id/radioGroup_gender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/radioButton_public"
                android:checked="true"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="#3C4267"
                android:stateListAnimator="@null"
                style="@style/radio_style"
                android:text="@string/room_create_public"/>


            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/radioButton_private"
                android:layout_marginStart="40dp"
                android:checked="false"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="#3C4267"
                android:stateListAnimator="@null"
                style="@style/radio_style"
                android:text="@string/room_create_private" />

        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <io.agora.secnceui.widget.encryption.ChatroomEncryptionInputView
        android:id="@+id/ed_pwd"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/group_layout"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:isWaitInput ="true"
        android:textCursorDrawable="@drawable/bg_edit_cursor"
        app:round="@dimen/space_8dp"
        app:textSize="@dimen/text_size_18sp"
        app:isPwd="false"
        android:inputType="number"
        app:textColor="@color/dark_grey_color_040925"
        app:textLength="4"
        app:defaultColor="@color/white"
        app:backColor="@color/white"
        app:checkedColor="@color/white"
        app:waitInputColor="@color/main_color_009FFF"
        android:layout_centerInParent="true"
        android:layout_width="296dp"
        android:layout_height="48dp"/>

    <TextView
        android:id="@+id/input_tip"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/ed_pwd"
        app:layout_constraintStart_toStartOf="@+id/ed_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/color_FA396A"
        android:textSize="@dimen/text_size_12sp"
        android:text="@string/room_create_tips"
        />

    <TextView
        android:id="@+id/bottom_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="34dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16sp"
        android:text="@string/room_create_next"
        android:background="@drawable/bg_chatroom_bottom_button"
        android:layout_width="315dp"
        android:layout_height="48dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>