<resources>

    <style name="BottomSheetDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_out_right</item>
    </style>

    <style name="chatroom_seat_roundStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="chatroom_top_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_11</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_rect_radius13_black20</item>
    </style>

    <style name="chatroom_bottom_sheet_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:textColor">@color/dark_grey_color_040925</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="chatroom_bottom_sheet_subtitle_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textColor">@color/dark_grey_color_6C7192</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:background">@color/color_F7F8FB</item>
    </style>

    <style name="chatroom_bottom_sheet_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textColor">@color/color_3C4267</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="chatroom_bottom_sheet_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:button">@drawable/cb_checkbox_selector</item>
    </style>

    <style name="chatroom_bottom_sheet_progress">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:progressDrawable">@drawable/pb_chatroom_seekbar</item>
        <item name="android:thumb">@drawable/icon_progress_thumb20</item>
        <item name="android:max">100</item>
    </style>

    <style name="chatroom_bottom_sheet_right_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingEnd">19dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">@color/color_3C4267</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="chatroom_bottom_sheet_frame_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">7dp</item>
        <item name="android:paddingEnd">7dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/main_color_156EF3</item>
        <item name="android:textSize">@dimen/sp_11</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_rect_stoke4_blue</item>
    </style>

    <style name="chatroom_bottom_sheet_divider_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="dividerColor">@color/divider_color_F6F6F6</item>
    </style>

    <declare-styleable name="chatroom_encryption_input_style">
        <attr name="space" format="dimension" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="checkedColor" format="color" />
        <attr name="defaultColor" format="color" />
        <attr name="textLength" format="integer" />
        <attr name="backColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="circle" format="dimension" />
        <attr name="round" format="dimension" />
        <attr name="textSize" format="dimension" />
        <attr name="isPwd" format="boolean" />
        <attr name="waitInputColor" format="color" />
        <attr name="isWaitInput" format="boolean" />
    </declare-styleable>

    <!-- like自定义属性 -->
    <declare-styleable name="LikeLayout">
        <attr name="initX" format="dimension" />
        <attr name="initY" format="dimension" />
        <attr name="xRand" format="dimension" />
        <attr name="animLengthRand" format="dimension" />
        <attr name="xPointFactor" format="dimension" />
        <attr name="animLength" format="dimension" />
        <attr name="heart_width" format="dimension" />
        <attr name="heart_height" format="dimension" />
        <attr name="bezierFactor" format="integer" />
        <attr name="anim_duration" format="integer" />
    </declare-styleable>

    <style name="BottomDialogFragment.Animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_anim_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_anim_exit</item>
    </style>

    <!--    取消按钮-->
    <style name="chatroom_cancel_button_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/color_756E98</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_rect_radius24_eff4ff</item>
    </style>

    <!--    确认按钮-->
    <style name="chatroom_confirm_button_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/bg_rect_radius24_gradient_blue</item>
    </style>
</resources>