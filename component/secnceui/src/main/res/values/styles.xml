<resources>

    <style name="chatroom_seat_roundStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="chatroom_top_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:paddingStart">7dp</item>
        <item name="android:paddingEnd">7dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_11</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_rect_radius13_black20</item>
    </style>

    <style name="chatroom_bottom_sheet_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:textColor">@color/dark_grey_color_040925</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="chatroom_bottom_sheet_subtitle_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textColor">@color/dark_grey_color_6C7192</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:background">@color/color_F7F8FB</item>
    </style>

    <style name="chatroom_bottom_sheet_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textColor">@color/color_3C4267</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="chatroom_bottom_sheet_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:button">@drawable/cb_checkbox_selector</item>
    </style>

    <style name="chatroom_bottom_sheet_progress">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:progressDrawable">@drawable/pb_chatroom_seekbar</item>
        <item name="android:thumb">@drawable/icon_progress_thumb20</item>
        <item name="android:max">100</item>
    </style>

    <style name="chatroom_bottom_sheet_right_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">19dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">@color/color_3C4267</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="chatroom_bottom_sheet_frame_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">7dp</item>
        <item name="android:paddingEnd">7dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/main_color_156EF3</item>
        <item name="android:textSize">@dimen/sp_11</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_rect_stoke4_blue</item>
    </style>

    <style name="chatroom_bottom_sheet_divider_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:textColor">@color/divider_color_F6F6F6</item>
    </style>
</resources>